<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daffodil.activitiestypedemo.SingleInstanceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Single Instance Activity"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Testing Single Instance"
        android:id="@+id/btn_single_instance_to_testing_activity"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lauch Me"
        android:id="@+id/btn_single_instance_self"
        android:layout_below="@+id/btn_single_instance_to_testing_activity"
        android:layout_marginTop="65dp"
        android:layout_alignLeft="@+id/btn_single_instance_to_testing_activity"
        android:layout_alignStart="@+id/btn_single_instance_to_testing_activity"
        android:layout_alignRight="@+id/btn_single_instance_to_testing_activity"
        android:layout_alignEnd="@+id/btn_single_instance_to_testing_activity" />
</RelativeLayout>
